<!-- custom_order_dialog.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/foodbg" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="18sp"
        android:fontFamily="@font/space_grotesk_semibold"

        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/subtractBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_remove_inactive" />

        <TextView
            android:id="@+id/itemCount"
            android:layout_toRightOf="@id/subtractBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_semibold"
            android:text="1"
            android:padding="5dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/addBtn"
            android:layout_toRightOf="@id/itemCount"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add" />

    </RelativeLayout>


</LinearLayout>
