<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ViewItemActivity"
    android:id="@+id/viewItemLayout">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foodbg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/itemDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemImage"
        android:layout_margin="8dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               android:id="@+id/itemLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">

               <TextView
                   android:id="@+id/itemName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/space_grotesk_semibold"
                   android:text="Item Name"
                   android:textSize="18dp"
                   android:padding="10sp"/>

               <ImageView
                   android:id="@+id/startImage"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/itemName"
                   android:layout_marginLeft="10sp"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="0dp"
                   android:scaleX="1.25"
                   android:scaleY="1.25"
                   android:src="@drawable/ic_star_filled" />

               <TextView
                   android:id="@+id/itemRating"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="4.2/5"
                   android:textSize="16sp"
                   android:fontFamily="@font/inter_medium"
                   android:layout_toRightOf="@id/startImage"
                   android:layout_below="@+id/itemName"
                   android:padding="5sp"/>
               <TextView
                   android:id="@+id/itemRatedBy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="(5 reviews)"
                   android:textSize="16sp"
                   android:fontFamily="@font/inter_medium"
                   android:layout_toRightOf="@id/itemRating"
                   android:layout_below="@+id/itemName"
                   android:padding="5sp"/>
               <TextView
                   android:id="@+id/itemPrice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/space_grotesk_semibold"
                   android:text="MYR. 10"
                   android:textColor="@color/primary"
                   android:textSize="16dp"
                   android:layout_below="@+id/itemName"
                   android:layout_alignParentEnd="true"
                   android:padding="5sp"/>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/restaurantLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp">
               <ImageView
                   android:id="@+id/restaurantImage"
                   android:layout_width="55dp"
                   android:layout_height="50dp"
                   android:scaleType="centerCrop"
                   android:layout_marginRight="10sp"
                   android:src="@drawable/logo"/>
               <TextView
                   android:id="@+id/soldByTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sold By"
                   android:fontFamily="@font/inter_medium"
                   android:paddingLeft="5sp"
                   android:layout_toEndOf="@id/restaurantImage"
                   android:textSize="18sp"/>
               <TextView
                   android:id="@+id/restaurantName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingLeft="5sp"
                   android:fontFamily="@font/inter_medium"
                   android:layout_toEndOf="@id/restaurantImage"
                   android:layout_below="@id/soldByTextView"
                   android:text="Restaurant Name"

                   android:textSize="18sp"/>
           </RelativeLayout>
       </LinearLayout>
    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/descriptionCard"
       android:layout_below="@id/itemDetailsCard"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="8dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/restaurantLayout"
           android:orientation="vertical"
           android:padding="5dp"
           android:layout_marginTop="5dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Description"
               android:fontFamily="@font/space_grotesk_bold"
               android:padding="5sp"
               android:layout_toEndOf="@id/restaurantImage"
               android:textSize="18sp"/>

           <TextView
               android:id="@+id/itemDescription"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Description"
               android:fontFamily="@font/inter_medium"
               android:paddingHorizontal="5sp"
               android:layout_toEndOf="@id/restaurantImage"
               android:textSize="16sp"/>

       </LinearLayout>
   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5sp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyNowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Buy Now"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Add to cart"/>
    </LinearLayout>

</RelativeLayout>