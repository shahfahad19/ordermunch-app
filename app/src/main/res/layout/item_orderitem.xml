<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/itemLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@drawable/foodbg"
                app:layout_constraintTop_toTopOf="parent"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="26dp"
                    android:fontFamily="@font/space_grotesk_semibold"
                    android:text="Item Name"
                    android:textColor="@color/text"
                    android:textSize="17dp" />




                <TextView
                    android:id="@+id/restaurantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@+id/itemName"
                    android:fontFamily="@font/inter_medium"
                    android:text="Restaurant"
                    android:textColor="@color/lightgray"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/space_grotesk_medium"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:text="x 1"/>

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@id/itemCount"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/space_grotesk_medium"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"

                    android:text="MYR 10"/>




            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemReviewLayout"
            android:layout_below="@id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10sp"
            android:background="#eeeeee"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Review"
                android:textColor="@color/gray"
                android:fontFamily="@font/space_grotesk_medium"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_filled"/>
                <TextView
                    android:id="@+id/stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/text"
                    android:text="4.3/5"/>


            </LinearLayout>


            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:text="Not reviewed"
                android:textColor="@color/lightgray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reviewBtnsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp">
            <Button
                android:id="@+id/addReviewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"/>
            <Button
                android:id="@+id/updateReviewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Review"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>