<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:src="@drawable/foodbg"
            app:layout_constraintTop_toTopOf="parent"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="26dp"
                android:fontFamily="@font/space_grotesk_semibold"
                android:text="Item Name"
                android:textColor="@color/text"
                android:textSize="16dp" />



            <ImageView
                android:id="@+id/itemDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete"/>

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/itemName"
                android:fontFamily="@font/inter_medium"
                android:text="Restaurant"
                android:textColor="@color/lightgray"
                android:textSize="12dp" />
                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/space_grotesk_medium"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:text="MYR 10"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee"
               >

                <ImageView
                    android:id="@+id/subtractBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_remove" />

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_toRightOf="@id/subtractBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_semibold"
                    android:text="1"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/addBtn"
                    android:layout_toRightOf="@id/itemCount"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>